<Button1@Button>
    font_size: 32


<MyLayout>:
    do_default_tab:False
    tab_pos: 'bottom_mid'
    tab_width: (root.width / 6) 
    tab_height: 120
    

    TabbedPanelItem:
        text: "home"     
        background_normal: ''
        # background_color: 118/255, 138/255, 30/255, 1
        background_color: 14/255, 107/255, 179/255, 1
       

        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Line:
                width: 5
                rectangle: self.x, self.y, self.width, self.height

            
        

        BoxLayout:
            orientation: 'vertical'
            
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                    
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                orientation: "vertical"
                padding: 10
                spacing: 50
                size_hint: 1,0.5

                Image:
                    source:"images/home_image.jpg"
                    size_hint: 1, 1

                Image:
                    source:"images/bottom_image.png"
                    size_hint: 1, 1
                

            BoxLayout:
                orientation: "vertical"
                padding: 10
                spacing: 50
                size_hint: 1,0.5
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                RoundB:
                    text: '+'
                    font_size: 100
                    size_hint: 0.4, 0.4
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    on_press: root.add_class()

                RoundB:
                    text: '-'
                    size_hint: 0.4, 0.4
                    font_size: 150
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    on_press: root.delete_class()

                Image:
                    source:"images/fish.png"
                    size_hint: 1, 1

                

            

            


    TabbedPanelItem:
        text: "class"
        background_normal: ''
        # background_color: 118/255, 138/255, 30/255, 1
        background_color: 14/255, 107/255, 179/255, 1

        canvas.before:
            Color:
                rgba: 0, 0, 0, 1  # Border color for each tab
            Line:
                width: 5
                rectangle: self.x, self.y, self.width, self.height

        BoxLayout:
            canvas.before:
                Color:
                    # rgba: 52/255, 73/255, 85/255, 1  # Replace with your desired color (RGB values, alpha)
                    rgba: 1, 1, 1, 1
                    
                Rectangle:
                    pos: self.pos
                    size: self.size
            id: cid
            orientation:'vertical'
            padding: 100
            spacing: 50

    TabbedPanelItem:
        text: "reg"
        background_normal: ''
        # background_color: 118/255, 138/255, 30/255, 1
        background_color: 14/255, 107/255, 179/255, 1

        canvas.before:
            Color:
                rgba: 0, 0, 0, 1  # Border color for each tab
            Line:
                width: 5
                rectangle: self.x, self.y, self.width, self.height

        ScrollView:
            do_scroll_x: False 
            do_scroll_y: True


            GridLayout:
                canvas.before:
                    Color:
                        # rgba: 52/255, 73/255, 85/255, 1 
                        rgba: 1, 1, 1, 1
                        
                    Rectangle:
                        pos: self.pos
                        size: self.size
                id: reg
                cols: 3
                size_hint_y: None
                height: 7000
                spacing: 50
                padding: 20

    TabbedPanelItem:
        text: "sub"
        background_normal: ''
        # background_color: 118/255, 138/255, 30/255, 1
        background_color: 14/255, 107/255, 179/255, 1

        canvas.before:
            Color:
                rgba: 0, 0, 0, 1  # Border color for each tab
            Line:
                width: 5
                rectangle: self.x, self.y, self.width, self.height

        GridLayout:
            cols: 1
            spacing: 100
            padding: 180
            canvas.before:
                Color:
                    # rgba: 52/255, 73/255, 85/255, 1  # Replace with your desired color (RGB values, alpha)
                    rgba: 1, 1, 1, 1
                    
                Rectangle:
                    pos: self.pos
                    size: self.size

            RoundB:
                size_hint: 0.7, 0.2
                id: sb2
                text: "SUBMIT"
                font_size: 70
                on_press: root.final_submit()

            RoundB:
                size_hint: 0.8, 0.2
                id: sb3
                text: "CANCEL"
                font_size: 70
                on_press: root.cancel_btn()

            

    TabbedPanelItem:
        text: "info"
        background_normal: ''
        # background_color: 118/255, 138/255, 30/255, 1
        background_color: 14/255, 107/255, 179/255, 1

        canvas.before:
            Color:
                rgba: 0, 0, 0, 1  # Border color for each tab
            Line:
                width: 5
                rectangle: self.x, self.y, self.width, self.height

        ScrollView:
            do_scroll_x: False 
            do_scroll_y: True
            
            GridLayout:
                id: jr
                cols: 1
                size_hint: 1, None
                height: 20000
                spacing: 10
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1 
                        
                    Rectangle:
                        pos: self.pos
                        size: self.size

    TabbedPanelItem:
        text: "about"
        background_normal: ''
        # background_color: 118/255, 138/255, 30/255, 1
        background_color: 14/255, 107/255, 179/255, 1


        canvas.before:
            Color:
                rgba: 0, 0, 0, 1  # Border color for each tab
            Line:
                width: 5
                rectangle: self.x, self.y, self.width, self.height

